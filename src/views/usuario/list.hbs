<div class="container" > 
    <h1 class="text-center">USUARIOS</h1>
    <div  style="padding-left: 20%;" > 
    

      
     <div class="row">                
        <div class="col-md-6"> 
             <a class="btn btn-success btn2 "  href="/signup/"><i class="fa fa-plus"> Crear Nuevo</i>  </a>
        </div>
                <div class="col-md-6" >
                 <form action="/usuario/buscar" method="POST">
                  <input class="" type="text" name="fullname" placeholder="Buscar" id="fullname" >
                  <button class="btn btn-success btn3" >Buscar</button>
                 </form> 
                </div>
      </div>

                                

    <div id="scroll" class="overflow-auto overflow-hidden">
        <div id="table-wrapper">
  <div id="table-scroll">
        <div class="containerlist" style="overflow-x:auto;">
            <div class="row">
                <div class="col-sm-11">
                    <div class="row">
                        <br>

                        <div class="col-10 col-sm-11" id="panel-servicios">

                          

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Nombre completo</th>
                                         <th>Usuario</th>
                                         <th>Rol</th>
                                          <th>email</th>

                                        
                                    </tr>
                                </thead>
                                {{#each usuario }}
                                <tr>
                                <td>{{fullname}}</td>
                                <td>{{username}}</td>
                                <td>{{rol}}</td>
                                <td>{{email}}</td>




                                 <td>
                                        <a  href="/usuario/delete/{{id}}" onClick="alert('¿Desea eliminar este registro?')"  aria-label="borrar" title="actu">
                                        
                         <i  class="fas fa-trash-alt" title="Eliminar" style="color: #f80000;  " aria-hidden="true" ></i> 
                    </a>
                    </td>
                     <td>
                       <a  href="/usuario/editpass/{{id}}">
                        <i class="fas fa-unlock-alt" title="Cambiar contraseña" style="color: rgb(255, 174, 0);"></i>
                       </a>
                    </td>
                           
                    <td>
                       <a  href="/usuario/edit/{{id}}" ><i class="fas fa-pencil-alt" title="Editar" style="color: rgb(35, 148, 0);  " aria-hidden="true" ></i> </a>
                   </td>
                            
                         
                    

                                </tr>
                                {{else}}
     <th></th>  
     <th>Aún no se han agregado datos.</th>
    </tr>
    {{/each}}
                            </table>
                        </div>

                    
                    </div>
                </div>

            </div>


        </div>
    </div>


</div>
 </div>


