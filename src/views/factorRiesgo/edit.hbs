<div class="container " style="padding-left: 25%; padding-top: 2%;">
     <div class="row">
        <div class="col-md-1">
           <a href="/factorRiesgo"><i class="fas fa-arrow-circle-left fa-2x" style="color: rgb(35, 148, 0);"></i></a> 
        </div>
        <div class="col" >
            <h2>Editar factor de riesgo.</h2>
        </div>
    </div>
</div>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/factorRiesgo/edit/{{factor.id}}" method="POST">
                        <div class="form-group">
                            <input type="text"  name="factor" class="form-control" placeholder="Factor de Riesgo "  value="{{factor.factor}}" autofocus>
                        </div>
                         <div class="form-group">
                        <select class ="form-control custom-select is-invalid" name="eventoRiesgoId" id="id" aria-describedby="validationServer04Feedback" required>
						 <option value="{{eventoRiesgos1.id}}" name="id">{{eventoRiesgos1.EventoRiesgo}}</option>
						{{#each eventoRiesgos }}
                                  <option value="{{id}}" name="id"> {{EventoRiesgo}}</option>
                         {{/each}}
					    </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>